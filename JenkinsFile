pipeline {
  agent any
  tools {
    jdk 'Java'
    maven 'Maven'
  }
  stages {
    stage("Checkout from SCM") {
      steps {
        git branch: 'main', credentialsId: 'GitHubcredentials', url: 'https://github.com/rakshandhak/spring-boot-application.git'
      }
    }
    stage("Build Application") {
      steps {
        sh "mvn clean package"
      }
    }
    stage("Test Application") {
      steps {
        sh "mvn test"
      }
    }
  }
}
